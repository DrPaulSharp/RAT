build $builddir/_coder_reflectivity_calculation_api.o : cc $root/interface/_coder_reflectivity_calculation_api.c
build $builddir/_coder_reflectivity_calculation_mex.o : cc $root/interface/_coder_reflectivity_calculation_mex.c
build $builddir/reflectivity_calculation_emxutil.o : cc $root/reflectivity_calculation_emxutil.c
