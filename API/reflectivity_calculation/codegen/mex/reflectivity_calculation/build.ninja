# Link
build $root/reflectivity_calculation_mex.mexa64 : link $builddir/rt_nonfinite.o $builddir/reflectivity_calculation_mexutil.o $builddir/reflectivity_calculation_data.o $builddir/reflectivity_calculation_initialize.o $builddir/reflectivity_calculation_terminate.o $builddir/reflectivity_calculation.o $builddir/eml_int_forloop_overflow_check.o $builddir/standardTF_stanLay_reflectivityCalculation.o $builddir/allocateParamsToLayers.o $builddir/backSort.o $builddir/allocateLayersForContrast.o $builddir/groupLayers_Mod.o $builddir/indexShapeCheck.o $builddir/makeSLDProfiles.o $builddir/makeSLDProfileXY.o $builddir/sum.o $builddir/colon.o $builddir/asymconvstep.o $builddir/power.o $builddir/sqrt.o $builddir/applyScalarFunction.o $builddir/resampleLayers.o $builddir/adaptive.o $builddir/sldFunc.o $builddir/repmat.o $builddir/acos.o $builddir/sortrows.o $builddir/sortLE.o $builddir/shiftdata.o $builddir/callReflectivity.o $builddir/abeles_single.o $builddir/resolution_polly.o $builddir/applyBackgroundCorrection.o $builddir/chiSquared.o $builddir/abeles_paraPoints.o $builddir/standardTF_stanlay_paraContrasts.o $builddir/_coder_reflectivity_calculation_api.o $builddir/_coder_reflectivity_calculation_mex.o $builddir/reflectivity_calculation_emxutil.o $builddir/_coder_reflectivity_calculation_info.o $builddir/c_mexapi_version.o 
