# CompilerName=gcc
# Mode=optim
ninja_required_version = 1.3

# Basic folders
root = .
builddir = $root/build/glnxa64
matlabdir = /usr/local/MATLAB/R2020a
startdir = /home/arwel/Documents/RascalDev/RAT/API/reflectivity_calculation

# Toolchain information
cc = /bin/gcc
cxx = g++
linker = /bin/gcc
linkerxx = g++

cflags =  -fexceptions -fPIC -fno-omit-frame-pointer -pthread -D_GNU_SOURCE -DMATLAB_MEX_FILE  -O2 -fwrapv -DNDEBUG -std=c99 -I "$root" -I "$startdir" -I "$root/interface" -I "$matlabdir/extern/include" -I "." -DMODEL=reflectivity_calculation_mex -c -fopenmp -DOMPLIBNAME="$matlabdir/sys/os/glnxa64/libiomp5.so" 

cxxflags =  -fexceptions -fPIC -fno-omit-frame-pointer -pthread -std=c++11 -D_GNU_SOURCE -DMATLAB_MEX_FILE  -O2 -fwrapv -DNDEBUG -std=c++11 -I "$root" -I "$startdir" -I "$root/interface" -I "$matlabdir/extern/include" -I "." -DMODEL=reflectivity_calculation_mex -c -fopenmp -DOMPLIBNAME="$matlabdir/sys/os/glnxa64/libiomp5.so" 

ldflags =  -pthread -Wl,--no-undefined -Wl,-rpath-link,$matlabdir/bin/glnxa64 -shared  -L"$matlabdir/bin/glnxa64" -lmx -lmex -lmat -lm -lstdc++  -o reflectivity_calculation_mex.mexa64 -lemlrt -lcovrt -lut -lmwmathutil -fPIC -L"$matlabdir/sys/os/glnxa64" -liomp5 -Wl,--version-script,reflectivity_calculation_mex.map

# Build Rules
rule cc
    command = $cc $cflags $in -o $out

rule cxx
    command = $cxx $cxxflags $in -o $out

rule link
    command = $linker $in $ldflags

rule linkxx
    command = $linkerxx $in $ldflags

# Build
build $builddir/rt_nonfinite.o : cc $root/rt_nonfinite.c
build $builddir/reflectivity_calculation_mexutil.o : cc $root/reflectivity_calculation_mexutil.c
build $builddir/reflectivity_calculation_data.o : cc $root/reflectivity_calculation_data.c
build $builddir/reflectivity_calculation_initialize.o : cc $root/reflectivity_calculation_initialize.c
build $builddir/reflectivity_calculation_terminate.o : cc $root/reflectivity_calculation_terminate.c
build $builddir/reflectivity_calculation.o : cc $root/reflectivity_calculation.c
build $builddir/eml_int_forloop_overflow_check.o : cc $root/eml_int_forloop_overflow_check.c
build $builddir/standardTF_stanLay_reflectivityCalculation.o : cc $root/standardTF_stanLay_reflectivityCalculation.c
build $builddir/allocateParamsToLayers.o : cc $root/allocateParamsToLayers.c
build $builddir/backSort.o : cc $root/backSort.c
build $builddir/allocateLayersForContrast.o : cc $root/allocateLayersForContrast.c
build $builddir/groupLayers_Mod.o : cc $root/groupLayers_Mod.c
build $builddir/indexShapeCheck.o : cc $root/indexShapeCheck.c
build $builddir/makeSLDProfiles.o : cc $root/makeSLDProfiles.c
build $builddir/makeSLDProfileXY.o : cc $root/makeSLDProfileXY.c
build $builddir/sum.o : cc $root/sum.c
build $builddir/colon.o : cc $root/colon.c
build $builddir/asymconvstep.o : cc $root/asymconvstep.c
build $builddir/power.o : cc $root/power.c
build $builddir/sqrt.o : cc $root/sqrt.c
build $builddir/applyScalarFunction.o : cc $root/applyScalarFunction.c
