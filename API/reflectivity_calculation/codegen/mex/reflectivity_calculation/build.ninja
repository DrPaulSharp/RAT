build $builddir/repmat.o : cc $root/repmat.c
build $builddir/acos.o : cc $root/acos.c
build $builddir/sortrows.o : cc $root/sortrows.c
build $builddir/sortLE.o : cc $root/sortLE.c
build $builddir/shiftdata.o : cc $root/shiftdata.c
build $builddir/callReflectivity.o : cc $root/callReflectivity.c
