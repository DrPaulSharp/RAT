# CompilerName=gcc
# Mode=optim
ninja_required_version = 1.3

# Basic folders
root = .
builddir = $root/build/glnxa64
matlabdir = /usr/local/MATLAB/R2020a
startdir = /home/arwel/Documents/RascalDev/RAT/API/reflectivity_calculation

# Toolchain information
cc = gcc
cxx = /bin/g++
linker = gcc
linkerxx = /bin/g++

cflags =  -fexceptions -fPIC -fno-omit-frame-pointer -pthread -D_GNU_SOURCE -DMATLAB_MEX_FILE  -O2 -fwrapv -DNDEBUG -fvisibility=hidden -std=c99 -I "$root" -I "$startdir" -I "$root/interface" -I "$matlabdir/extern/include" -I "." -DMW_CUDA_ARCH=350 -DMODEL=reflectivity_calculation_gpu_mex -DMW_NEEDS_VERSION_H -c 

cxxflags =  -fexceptions -fPIC -fno-omit-frame-pointer -pthread -std=c++11 -D_GNU_SOURCE -DMATLAB_MEX_FILE  -O2 -fwrapv -DNDEBUG -fvisibility=hidden -std=c++11 -I "$root" -I "$startdir" -I "$root/interface" -I "$matlabdir/extern/include" -I "." -DMW_CUDA_ARCH=350 -DMODEL=reflectivity_calculation_gpu_mex -DMW_NEEDS_VERSION_H -c 

ldflags =  -Xlinker --no-undefined  -shared -Xlinker --as-needed -Xlinker -rpath-link,$matlabdir/bin/glnxa64 -L"$matlabdir/bin/glnxa64" -Xlinker -rpath-link,$matlabdir/extern/bin/glnxa64 -L"$matlabdir/extern/bin/glnxa64" -lMatlabDataArray -lmx -lmex -lmat -lm -lstdc++  -o reflectivity_calculation_gpu_mex.mexa64 -lemlrt -lcovrt -lut -lmwmathutil -arch sm_35  -lcudart -lcublas -lcusolver -lcufft -lcuda -lc -Xnvlink -w  -Wno-deprecated-gpu-targets

# Build Rules
rule cc
    command = $cc $cflags $in -o $out

rule cxx
    command = $cxx $cxxflags $in -o $out

rule link
    command = $linker $in $ldflags

rule linkxx
    command = $linkerxx $in $ldflags

cudac = nvcc
linkercuda = nvcc

cudaflags =  -rdc=true -Xcompiler -fPIC,-ansi,-fexceptions,-fno-omit-frame-pointer,-pthread -Xcudafe "--display_error_number --diag_suppress=2381 --diag_suppress=unsigned_compare_with_zero --diag_suppress=useless_type_qualifier_on_return_type" -D_GNU_SOURCE -DMATLAB_MEX_FILE -Xcompiler -fvisibility=hidden -Xcompiler -std=c++11 -I "$root" -I "$startdir" -I "$root/interface" -I "$matlabdir/extern/include" -I "." -DMW_CUDA_ARCH=350 -DMODEL=reflectivity_calculation_gpu_mex -DMW_NEEDS_VERSION_H -c -arch sm_35  -I "$matlabdir/simulink/include" -I "$matlabdir/toolbox/shared/simtargets"
rule cudac
    command = $cudac $cudaflags $in -o $out

rule linkcuda
    command = $linkercuda $in $ldflags

# Build
build $builddir/rt_nonfinite.o : cudac $root/rt_nonfinite.cpp
build $builddir/reflectivity_calculation_gpu_data.o : cudac $root/reflectivity_calculation_gpu_data.cu
build $builddir/reflectivity_calculation_gpu_initialize.o : cudac $root/reflectivity_calculation_gpu_initialize.cu
build $builddir/reflectivity_calculation_gpu_terminate.o : cudac $root/reflectivity_calculation_gpu_terminate.cu
build $builddir/reflectivity_calculation_gpu.o : cudac $root/reflectivity_calculation_gpu.cu
build $builddir/_coder_reflectivity_calculation_gpu_api.o : cudac $root/interface/_coder_reflectivity_calculation_gpu_api.cu
build $builddir/_coder_reflectivity_calculation_gpu_mex.o : cudac $root/interface/_coder_reflectivity_calculation_gpu_mex.cu
build $builddir/reflectivity_calculation_gpu_emxutil.o : cudac $root/reflectivity_calculation_gpu_emxutil.cu
build $builddir/_coder_reflectivity_calculation_gpu_info.o : cudac $root/interface/_coder_reflectivity_calculation_gpu_info.cu
build $builddir/MWCudaDimUtility.o : cudac $root/MWCudaDimUtility.cu
build $builddir/MWLaunchParametersUtilities.o : cudac $root/MWLaunchParametersUtilities.cu
build $builddir/cpp_mexapi_version.o : cudac $root/cpp_mexapi_version.cpp

# Link
build $root/reflectivity_calculation_gpu_mex.mexa64 : linkcuda $builddir/rt_nonfinite.o $builddir/reflectivity_calculation_gpu_data.o $builddir/reflectivity_calculation_gpu_initialize.o $builddir/reflectivity_calculation_gpu_terminate.o $builddir/reflectivity_calculation_gpu.o $builddir/_coder_reflectivity_calculation_gpu_api.o $builddir/_coder_reflectivity_calculation_gpu_mex.o $builddir/reflectivity_calculation_gpu_emxutil.o $builddir/_coder_reflectivity_calculation_gpu_info.o $builddir/MWCudaDimUtility.o $builddir/MWLaunchParametersUtilities.o $builddir/cpp_mexapi_version.o 
