# CompilerName=gcc
# Mode=optim
ninja_required_version = 1.3

# Basic folders
root = .
builddir = $root/build/glnxa64
matlabdir = /usr/local/MATLAB/R2020a
startdir = /home/arwel/Documents/RascalDev/RAT/compile/reflectivity_calculation_compile

# Toolchain information
cc = gcc
cxx = /bin/g++
linker = gcc
linkerxx = /bin/g++

cflags =  -fexceptions -fPIC -fno-omit-frame-pointer -pthread -D_GNU_SOURCE -DMATLAB_MEX_FILE  -O2 -fwrapv -DNDEBUG -fvisibility=hidden -std=c99 -I "$root" -I "$startdir" -I "$root/interface" -I "$matlabdir/extern/include" -I "." -DMODEL=reflectivity_calculation_mex -DMW_NEEDS_VERSION_H -c -fopenmp -DOMPLIBNAME="$matlabdir/sys/os/glnxa64/libiomp5.so" 

cxxflags =  -fexceptions -fPIC -fno-omit-frame-pointer -pthread -std=c++11 -D_GNU_SOURCE -DMATLAB_MEX_FILE  -O2 -fwrapv -DNDEBUG -fvisibility=hidden -std=c++11 -I "$root" -I "$startdir" -I "$root/interface" -I "$matlabdir/extern/include" -I "." -DMODEL=reflectivity_calculation_mex -DMW_NEEDS_VERSION_H -c -fopenmp -DOMPLIBNAME="$matlabdir/sys/os/glnxa64/libiomp5.so" 

ldflags =  -pthread -Wl,--no-undefined  -shared -Wl,--as-needed -Wl,-rpath-link,$matlabdir/bin/glnxa64 -L"$matlabdir/bin/glnxa64" -Wl,-rpath-link,$matlabdir/extern/bin/glnxa64 -L"$matlabdir/extern/bin/glnxa64" -lMatlabDataArray -lmx -lmex -lmat -lm -lstdc++  -o reflectivity_calculation_mex.mexa64 -lemlrt -lcovrt -lut -lmwmathutil -fPIC -L"$matlabdir/sys/os/glnxa64" -liomp5

# Build Rules
rule cc
    command = $cc $cflags $in -o $out

rule cxx
    command = $cxx $cxxflags $in -o $out

rule link
    command = $linker $in $ldflags

rule linkxx
    command = $linkerxx $in $ldflags

# Build
build $builddir/rt_nonfinite.o : cxx $root/rt_nonfinite.cpp
build $builddir/reflectivity_calculation_mexutil.o : cxx $root/reflectivity_calculation_mexutil.cpp
build $builddir/reflectivity_calculation_data.o : cxx $root/reflectivity_calculation_data.cpp
build $builddir/reflectivity_calculation_initialize.o : cxx $root/reflectivity_calculation_initialize.cpp
build $builddir/reflectivity_calculation_terminate.o : cxx $root/reflectivity_calculation_terminate.cpp
build $builddir/reflectivity_calculation.o : cxx $root/reflectivity_calculation.cpp
build $builddir/eml_int_forloop_overflow_check.o : cxx $root/eml_int_forloop_overflow_check.cpp
build $builddir/standardTF_stanLay_reflectivityCalculation.o : cxx $root/standardTF_stanLay_reflectivityCalculation.cpp
build $builddir/allocateParamsToLayers.o : cxx $root/allocateParamsToLayers.cpp
build $builddir/backSort.o : cxx $root/backSort.cpp
build $builddir/allocateLayersForContrast.o : cxx $root/allocateLayersForContrast.cpp
build $builddir/standardTF_layers_core.o : cxx $root/standardTF_layers_core.cpp
build $builddir/groupLayers_Mod.o : cxx $root/groupLayers_Mod.cpp
build $builddir/colon.o : cxx $root/colon.cpp
build $builddir/indexShapeCheck.o : cxx $root/indexShapeCheck.cpp
build $builddir/makeSLDProfileXY.o : cxx $root/makeSLDProfileXY.cpp
build $builddir/sum.o : cxx $root/sum.cpp
build $builddir/asymconvstep.o : cxx $root/asymconvstep.cpp
build $builddir/power.o : cxx $root/power.cpp
build $builddir/sqrt.o : cxx $root/sqrt.cpp
build $builddir/applyScalarFunction.o : cxx $root/applyScalarFunction.cpp
build $builddir/resampleLayers.o : cxx $root/resampleLayers.cpp
build $builddir/adaptive.o : cxx $root/adaptive.cpp
build $builddir/sldFunc.o : cxx $root/sldFunc.cpp
build $builddir/repmat.o : cxx $root/repmat.cpp
build $builddir/acos.o : cxx $root/acos.cpp
build $builddir/sortrows.o : cxx $root/sortrows.cpp
build $builddir/sortLE.o : cxx $root/sortLE.cpp
build $builddir/shiftdata.o : cxx $root/shiftdata.cpp
build $builddir/callReflectivity.o : cxx $root/callReflectivity.cpp
build $builddir/abeles_single.o : cxx $root/abeles_single.cpp
build $builddir/chiSquared.o : cxx $root/chiSquared.cpp
build $builddir/abeles_paraPoints.o : cxx $root/abeles_paraPoints.cpp
build $builddir/resolution_polly_paraPoints.o : cxx $root/resolution_polly_paraPoints.cpp
build $builddir/standardTF_stanlay_paraContrasts.o : cxx $root/standardTF_stanlay_paraContrasts.cpp
build $builddir/standardTF_stanlay_paraAll.o : cxx $root/standardTF_stanlay_paraAll.cpp
build $builddir/_coder_reflectivity_calculation_api.o : cxx $root/interface/_coder_reflectivity_calculation_api.cpp
build $builddir/_coder_reflectivity_calculation_mex.o : cxx $root/interface/_coder_reflectivity_calculation_mex.cpp
