# CompilerName=gcc
# Mode=optim
ninja_required_version = 1.3

# Basic folders
root = .
builddir = $root/build/glnxa64
matlabdir = /usr/local/MATLAB/R2020a
startdir = /home/arwel/Documents/RascalDev/RAT/tests/first AA dppc original data/compile

# Toolchain information
cc = gcc
cxx = /bin/g++
linker = gcc
linkerxx = /bin/g++

cflags =  -fexceptions -fPIC -fno-omit-frame-pointer -pthread -D_GNU_SOURCE -DMATLAB_MEX_FILE  -O2 -fwrapv -DNDEBUG -fvisibility=hidden -std=c99 -I "$root" -I "$startdir" -I "$root/interface" -I "$matlabdir/extern/include" -I "." -DMODEL=interpolateOnToZ_mex -DMW_NEEDS_VERSION_H -c -fopenmp -DOMPLIBNAME="$matlabdir/sys/os/glnxa64/libiomp5.so" 

cxxflags =  -fexceptions -fPIC -fno-omit-frame-pointer -pthread -std=c++11 -D_GNU_SOURCE -DMATLAB_MEX_FILE  -O2 -fwrapv -DNDEBUG -fvisibility=hidden -std=c++11 -I "$root" -I "$startdir" -I "$root/interface" -I "$matlabdir/extern/include" -I "." -DMODEL=interpolateOnToZ_mex -DMW_NEEDS_VERSION_H -c -fopenmp -DOMPLIBNAME="$matlabdir/sys/os/glnxa64/libiomp5.so" 

ldflags =  -pthread -Wl,--no-undefined  -shared -Wl,--as-needed -Wl,-rpath-link,$matlabdir/bin/glnxa64 -L"$matlabdir/bin/glnxa64" -Wl,-rpath-link,$matlabdir/extern/bin/glnxa64 -L"$matlabdir/extern/bin/glnxa64" -lMatlabDataArray -lmx -lmex -lmat -lm -lstdc++  -o interpolateOnToZ_mex.mexa64 -lemlrt -lcovrt -lut -lmwmathutil -fPIC -L"$matlabdir/sys/os/glnxa64" -liomp5

# Build Rules
rule cc
    command = $cc $cflags $in -o $out

rule cxx
    command = $cxx $cxxflags $in -o $out

rule link
    command = $linker $in $ldflags

rule linkxx
    command = $linkerxx $in $ldflags

# Build
build $builddir/rt_nonfinite.o : cxx $root/rt_nonfinite.cpp
build $builddir/interpolateOnToZ_mexutil.o : cxx $root/interpolateOnToZ_mexutil.cpp
build $builddir/interpolateOnToZ_data.o : cxx $root/interpolateOnToZ_data.cpp
build $builddir/interpolateOnToZ_initialize.o : cxx $root/interpolateOnToZ_initialize.cpp
build $builddir/interpolateOnToZ_terminate.o : cxx $root/interpolateOnToZ_terminate.cpp
build $builddir/interpolateOnToZ.o : cxx $root/interpolateOnToZ.cpp
build $builddir/linspace.o : cxx $root/linspace.cpp
build $builddir/eml_int_forloop_overflow_check.o : cxx $root/eml_int_forloop_overflow_check.cpp
build $builddir/interp1.o : cxx $root/interp1.cpp
build $builddir/_coder_interpolateOnToZ_api.o : cxx $root/interface/_coder_interpolateOnToZ_api.cpp
build $builddir/_coder_interpolateOnToZ_mex.o : cxx $root/interface/_coder_interpolateOnToZ_mex.cpp
build $builddir/_coder_interpolateOnToZ_info.o : cxx $root/interface/_coder_interpolateOnToZ_info.cpp
build $builddir/cpp_mexapi_version.o : cxx $matlabdir/extern/version/cpp_mexapi_version.cpp

# Link
build $root/interpolateOnToZ_mex.mexa64 : linkxx $builddir/rt_nonfinite.o $builddir/interpolateOnToZ_mexutil.o $builddir/interpolateOnToZ_data.o $builddir/interpolateOnToZ_initialize.o $builddir/interpolateOnToZ_terminate.o $builddir/interpolateOnToZ.o $builddir/linspace.o $builddir/eml_int_forloop_overflow_check.o $builddir/interp1.o $builddir/_coder_interpolateOnToZ_api.o $builddir/_coder_interpolateOnToZ_mex.o $builddir/_coder_interpolateOnToZ_info.o $builddir/cpp_mexapi_version.o 
