# CompilerName=gcc
# Mode=optim
ninja_required_version = 1.3

# Basic folders
root = .
builddir = $root/build/glnxa64
matlabdir = /usr/local/MATLAB/R2020a
startdir = /home/arwel/Documents/RascalDev/RAT/Sandbox/matlabEngineCaller/tmwExampleNew

# Toolchain information
cc = /bin/gcc
cxx = g++
linker = /bin/gcc
linkerxx = g++

cflags =  -fexceptions -fPIC -fno-omit-frame-pointer -pthread -D_GNU_SOURCE -DMATLAB_MEX_FILE  -O2 -fwrapv -DNDEBUG -std=c99 -I "$root" -I "$startdir" -I "$matlabdir/extern/include" -I "$root/interface" -I "." -DMODEL=matlabEngineCaller_customLayers_mex -c 

cxxflags =  -fexceptions -fPIC -fno-omit-frame-pointer -pthread -std=c++11 -D_GNU_SOURCE -DMATLAB_MEX_FILE  -O2 -fwrapv -DNDEBUG -std=c++11 -I "$root" -I "$startdir" -I "$matlabdir/extern/include" -I "$root/interface" -I "." -DMODEL=matlabEngineCaller_customLayers_mex -c 

ldflags =  -pthread -Wl,--no-undefined -Wl,-rpath-link,$matlabdir/bin/glnxa64 -shared  -L"$matlabdir/bin/glnxa64" -lmx -lmex -lmat -lm -lstdc++  -o matlabEngineCaller_customLayers_mex.mexa64 -lemlrt -lcovrt -lut -lmwmathutil  "$matlabdir/bin/glnxa64/libeng.so" "$matlabdir/bin/glnxa64/libmx.so" -Wl,--version-script,matlabEngineCaller_customLayers_mex.map

# Build Rules
rule cc
    command = $cc $cflags $in -o $out

rule cxx
    command = $cxx $cxxflags $in -o $out

rule link
    command = $linker $in $ldflags

rule linkxx
    command = $linkerxx $in $ldflags

# Build
build $builddir/matlabCallFun.o : cc $startdir/matlabCallFun.c
build $builddir/rt_nonfinite.o : cc $root/rt_nonfinite.c
build $builddir/matlabEngineCaller_customLayers_data.o : cc $root/matlabEngineCaller_customLayers_data.c
build $builddir/matlabEngineCaller_customLayers_initialize.o : cc $root/matlabEngineCaller_customLayers_initialize.c
build $builddir/matlabEngineCaller_customLayers_terminate.o : cc $root/matlabEngineCaller_customLayers_terminate.c
build $builddir/matlabEngineCaller_customLayers.o : cc $root/matlabEngineCaller_customLayers.c
build $builddir/_coder_matlabEngineCaller_customLayers_api.o : cc $root/interface/_coder_matlabEngineCaller_customLayers_api.c
build $builddir/_coder_matlabEngineCaller_customLayers_mex.o : cc $root/interface/_coder_matlabEngineCaller_customLayers_mex.c
build $builddir/matlabEngineCaller_customLayers_emxutil.o : cc $root/matlabEngineCaller_customLayers_emxutil.c
build $builddir/_coder_matlabEngineCaller_customLayers_info.o : cc $root/interface/_coder_matlabEngineCaller_customLayers_info.c
build $builddir/c_mexapi_version.o : cc $matlabdir/extern/version/c_mexapi_version.c

# Link
build $root/matlabEngineCaller_customLayers_mex.mexa64 : link $builddir/matlabCallFun.o $builddir/rt_nonfinite.o $builddir/matlabEngineCaller_customLayers_data.o $builddir/matlabEngineCaller_customLayers_initialize.o $builddir/matlabEngineCaller_customLayers_terminate.o $builddir/matlabEngineCaller_customLayers.o $builddir/_coder_matlabEngineCaller_customLayers_api.o $builddir/_coder_matlabEngineCaller_customLayers_mex.o $builddir/matlabEngineCaller_customLayers_emxutil.o $builddir/_coder_matlabEngineCaller_customLayers_info.o $builddir/c_mexapi_version.o 
